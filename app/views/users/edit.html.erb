<div class="max-w-md mx-auto px-4 py-8">
  <div class="bg-card text-card-foreground p-8 rounded-lg shadow-md mb-6">
    <h1 class="text-3xl font-bold text-center text-foreground mb-6">Edit Profile</h1>
    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-800 border border-red-200 rounded-md px-4 py-2 font-medium text-center mb-4"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-destructive/10 text-destructive border border-destructive/20 rounded-md p-4 mb-4">
          <h2 class="font-semibold text-lg mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul class="list-disc list-inside text-sm">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :name, class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.text_field :name, class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <div class="mb-4">
        <%= form.label :email, class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.email_field :email, class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <div class="mb-4">
        <%= form.label :username, class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.text_field :username, class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <div class="mb-4">
        <%= form.label :bio, class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.text_area :bio, class: "flex min-h-[80px] w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 resize-y" %>
      </div>

      <div class="mb-4">
        <%= form.label :avatar, "Avatar URL", class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.text_field :avatar, placeholder: "e.g., https://i.pravatar.cc/150?img=1", class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <div class="mb-4">
        <%= form.label :password, "New Password (leave blank if not changing)", class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.password_field :password, class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <div class="mb-6">
        <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-foreground mb-1" %>
        <%= form.password_field :password_confirmation, class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <div class="text-center">
        <%= form.submit "Update Profile", class: "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>