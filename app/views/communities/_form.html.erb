<%= form_with model: community, local: true do |form| %>
  <% if community.errors.any? %>
    <div id="error_explanation" class="bg-destructive/10 text-destructive border border-destructive/20 rounded-md p-4 mb-4">
      <h2 class="font-semibold text-lg mb-2"><%= pluralize(community.errors.count, "error") %> prohibited this community from being saved:</h2>
      <ul class="list-disc list-inside text-sm">
        <% community.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-foreground mb-1" %>
    <%= form.text_field :name, placeholder: "Enter community name", class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-foreground mb-1" %>
    <%= form.text_area :description, placeholder: "Describe your community...", rows: 5, class: "flex min-h-[80px] w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 resize-y" %>
  </div>

  <div class="text-center mt-6">
    <%= form.submit "Save Community", class: "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 cursor-pointer" %>
  </div>
<% end %>