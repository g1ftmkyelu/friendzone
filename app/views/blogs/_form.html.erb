<%= form_with model: blog, local: true do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog post from being saved:</h2>
      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter blog post title" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: "Write your blog post content here...", rows: 15 %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Blog Post", class: "button" %>
  </div>
<% end %>