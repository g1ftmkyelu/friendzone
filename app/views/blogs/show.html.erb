<div class="container">
  <% if flash[:notice] %>
    <div class="flash notice"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert] %>
    <div class="flash alert"><%= flash[:alert] %></div>
  <% end %>

  <div class="blog-detail-card">
    <h1><%= @blog.title %></h1>
    <p class="blog-meta">By <%= link_to @blog.user.username, user_path(@blog.user) %> | <%= time_ago_in_words(@blog.created_at) %> ago</p>
    <div class="blog-content">
      <p><%= simple_format(@blog.content) %></p>
    </div>

    <div class="blog-actions">
      <%= link_to "Back to Blogs", blogs_path, class: "button button-secondary" %>
      <% if logged_in? && @blog.user == current_user %>
        <%= link_to "Edit Blog", edit_blog_path(@blog), class: "button" %>
        <%= button_to "Delete Blog", blog_path(@blog), method: :delete, data: { confirm: "Are you sure you want to delete this blog post?" }, class: "button button-danger" %>
      <% end %>
    </div>
  </div>
</div>